<form class="ui form very padded raised segment container login__form {{if working 'loading'}}" {{action "submit" on="submit"}}>
  <h2 class="ui center aligned header">Please Log In</h2>
  <div class="ui divider"></div>

  <div class="field">
    <label for="email">Email Address</label>
    {{input type="email" id="email" value=email placeholder="joe@example.com"}}
  </div>

  <div class="field">
    <label for="password">Password</label>
    {{input type="password" id="password" value=password placeholder="joe@example.com"}}
  </div>

  <button type="submit" class="ui huge fluid brown button {{if working 'loading'}}">
    <i class="fa fa-fw fa-check"></i> Log in
  </button>
</form>
